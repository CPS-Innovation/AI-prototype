<div class="app-search-form">
  <form>
    {{ govukInput({
      id: "caseSearch[keywords]",
      name: "caseSearch[keywords]",
      label: {
        text: "Focus your summary",
        classes: "govuk-label--s app-search-form__label"
      },
      hint: {
        text: "Enter a question or keyword for more tailored information"
      },
      value: data.caseSearch.keywords
    }) }}

    {{ govukButton({
      text: "Search",
      classes: "app-search-form__button"
    }) }}
  </form>

  {% if data.caseSearch.keywords %}
    <p class="govuk-!-margin-top-2 govuk-!-margin-bottom-0"><a class="govuk-link--no-visited-state" href="/cases/clear-search">Clear search</a></p>
  {% endif %}
</div>